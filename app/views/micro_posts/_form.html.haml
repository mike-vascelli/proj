= form_for(@micro_post) do |f|
  - if @micro_post.errors.any?
    #error_explanation
      %h2
        = pluralize(@micro_post.errors.count, "error")
        prohibited this micro_post from being saved:
      %ul
        - @micro_post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :text
    %br/
    = f.text_area :text
  .actions
    = f.submit
